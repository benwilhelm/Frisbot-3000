      <div id="nextGame">

        <h1>Next Game</h1>
        <%= render @game %>
        
        <div id="comments">
        
          <% if @game.comments.count > 0 %>        
            <%= render @game.comments %>
          <% end %>
          
          <% if user_signed_in? %>
          <form id="commentForm">
            <label>Leave a Comment:</label>
            <textarea rows="5" cols="40"></textarea>
            <br><input id='submitComment' name='submitComment' type="submit" value="Post Comment" />
          </form>
          <% end %>
        
        </div><!-- #comments -->
      </div><!-- #nextGame -->
      
      <div id="responses">
      
        <div id="summary" class="<%= @summary_class %>">
          <p id='numPlayers'><%= @yesses.count %> Players</p>
          <p id='gameStatus'><%= @game_status %></p>
          <p id='pollingStatus'><%= @polling_status %></p>
        </div>
                
        <dl id="yesses">
          <dt>Playing</dt>
          <% if @yesses.count > 0 %>
            <% @yesses.each do |rsvp| %>
            <dd><%= rsvp.user.fname.capitalize + ' ' + rsvp.user.lname.capitalize %></dd>
            <% end %>
          <% else %>
          <dd>No replies yet.</dd>
          <% end %>
        </dl>
        
        <dl id="nos">
          <dt>Not Playing</dt>
          <% if @nos.count > 0 %>
            <% @nos.each do |rsvp| %>
            <dd><%= rsvp.user.fname.capitalize + ' ' + rsvp.user.lname.capitalize %></dd>
            <% end %>
          <% else %>
          <dd>No replies yet.</dd>
          <% end %>
        </dl>
        
      </div><!-- #responses -->
      <div class="clear"></div>
