<h1>Listing games</h1>

<table>
  <tr>
    <th>Game time</th>
    <th>Location</th>
    <th>Polling cutoff</th>
    <th>Min players</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.game_time %></td>
    <td><%= game.location %></td>
    <td><%= game.polling_cutoff %></td>
    <td><%= game.min_players %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

