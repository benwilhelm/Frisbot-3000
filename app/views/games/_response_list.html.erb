          <dl id="yesses">
            <dt>Playing</dt>
            <% if @game.yesses.count > 0 %>
              <% @game.yesses.each do |rsvp| %>
              <dd><%= rsvp.user.fname.capitalize + ' ' + rsvp.user.lname.capitalize %></dd>
              <% end %>
            <% else %>
            <dd>No replies yet.</dd>
            <% end %>
          </dl>
          
          <dl id="nos">
            <dt>Not Playing</dt>
            <% if @game.nos.count > 0 %>
              <% @game.nos.each do |rsvp| %>
              <dd><%= rsvp.user.fname.capitalize + ' ' + rsvp.user.lname.capitalize %></dd>
              <% end %>
            <% else %>
            <dd>No replies yet.</dd>
            <% end %>
          </dl>
          
          <dl id="undecided">
            <dt>Undecided</dt>
            <% if @game.undecideds.count > 0 %>
              <% @game.undecideds.each do |rsvp| %>
              <dd><%= rsvp.user.fname.capitalize + ' ' + rsvp.user.lname.capitalize %></dd>
              <% end %>
            <% end %>
          </dl>
