          <% new_class = @comment.try(:id) == comment.id ? 'latest-comment' : '' %>
          
          <div class="comment <%= new_class %>">


            <div class="comment-head">
              <% if user_signed_in? and (current_user.id == comment.user_id or current_user.admin) %>
                <%= button_to "Delete Comment", comment, :confirm => "Are you sure you want to delete this comment?", :method => :delete, :class=>'delete', :remote=>true %>
              <% end %>
              <% if user_signed_in? and current_user.id == comment.user_id %>
                <%= button_to "Edit Comment", edit_comment_path(comment), :method => :get, :class => 'edit', :remote=>true %>
              <% end %>
              <%= comment.user.fname.capitalize %> 
              <%= comment.user.id == @game.organizer ? ' (organizer) ' : '' %>
              says:
              <div class="clear"></div>
            </div><!-- .comment-head -->

            <div class="comment-body">
              <%= comment.comment_text.html_safe %>
            </div><!-- .comment-body -->

          </div><!-- .comment -->
