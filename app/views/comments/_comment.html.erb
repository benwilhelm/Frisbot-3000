          <div class="comment">
            <p class="comment-head">
              <%= comment.user.fname.capitalize %> says:
            </p>  
            <div class="comment-body">
              <%= comment.comment_text.html_safe %>
              <% if user_signed_in? and (current_user.id == comment.user_id or current_user.admin) %>
                <%= button_to "Delete Comment", comment, :confirm => "Are you sure you want to delete this comment?", :method => :delete, :class=>'delete' %>
              <% end %>
            </div><!-- .comment-body -->
          </div><!-- .comment -->
